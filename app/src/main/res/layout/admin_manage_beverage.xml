<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/drawerLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="10dp"
            android:background="#ffffff">

            <LinearLayout
                android:id="@+id/linearLayout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_marginLeft="20dp"
                android:background="#ffffff"
                android:orientation="horizontal">

                <ImageButton
                    android:id="@+id/menu"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:backgroundTint="#00FFFFFF"
                    android:onClick="openDrawer"
                    android:src="@drawable/logo" />

                <TextView
                    android:id="@+id/admin_details"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="20dp"
                    android:onClick="toRegister"
                    android:text="user@gmail.com"
                    android:textAlignment="center"
                    android:textSize="14sp" />

                <ImageButton
                    android:id="@+id/login"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="90dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="25dp"
                    android:background="@color/white"
                    android:onClick="toLoginPage"
                    android:src="@drawable/user_home" />

                <ImageButton
                    android:id="@+id/logout"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="10dp"
                    android:background="@color/white"
                    android:src="@drawable/logout"
                    android:text="Logout" />
            </LinearLayout>
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/beverage"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="80dp"/>

        </RelativeLayout>
    </ScrollView>

    <LinearLayout
        android:id="@+id/drawerMenu"
        android:layout_width="240dp"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        android:background="#FFFFFF"
        android:orientation="vertical">

        <include
            layout="@layout/nav_header_main"></include>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="25dp"
            android:layout_marginLeft="30dp"
            android:text="Home"
            android:onClick="toHome"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="25dp"
            android:layout_marginLeft="30dp"
            android:text="Add"
            android:onClick="toAddMenu"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="25dp"
            android:layout_marginLeft="30dp"
            android:text="Order"
            android:onClick="toOrder"/>

        <TextView
            android:id="@+id/mainDishPage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="25dp"
            android:layout_marginLeft="30dp"
            android:text="Main Dish"
            android:onClick="toMainDish"/>

        <TextView
            android:id="@+id/beveragePage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="25dp"
            android:layout_marginLeft="30dp"
            android:text="Beverage"
            android:onClick="toBeverage"/>

        <TextView
            android:id="@+id/dessertPage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="25dp"
            android:layout_marginLeft="30dp"
            android:text="Dessert"
            android:onClick="toDessert"/>

        <View
            android:layout_width="200dp"
            android:layout_height="1dp"
            android:background="#000000"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="25dp"/>

        <TextView
            android:id="@+id/report"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="25dp"
            android:layout_marginLeft="30dp"
            android:text="Report"
            android:onClick="toReportPage"/>
    </LinearLayout>
</androidx.drawerlayout.widget.DrawerLayout>
