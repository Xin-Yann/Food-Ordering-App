<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginTop="10dp"
    android:background="#ffffff">

    <LinearLayout
        android:id="@+id/linearLayout0"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginBottom="10dp"
        android:background="#ffffff"
        android:orientation="vertical">

        <include
            layout="@layout/header"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="top"
            android:layout_weight="1">

            <!--Menu-->
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/textView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="40dp"
                    android:layout_marginTop="20dp"
                    android:layout_weight="1"
                    android:fontFamily="@font/happylucky_gxnzp"
                    android:text="What Are You"
                    android:textSize="14pt" />

                <TextView
                    android:id="@+id/textVie1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="40dp"
                    android:layout_marginTop="60dp"
                    android:layout_weight="1"
                    android:fontFamily="@font/happylucky_gxnzp"
                    android:text="Craving For Today?"
                    android:textSize="16pt" />

                <LinearLayout
                    android:id="@+id/search"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="120dp">


                    <com.google.android.material.appbar.AppBarLayout
                        android:layout_width="360dp"
                        android:layout_height="wrap_content">

                        <androidx.appcompat.widget.Toolbar
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                            <androidx.appcompat.widget.SearchView
                                android:id="@+id/searchView"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:background="#f2f2f2"
                                android:iconifiedByDefault="false"
                                android:queryHint="Search" />
                        </androidx.appcompat.widget.Toolbar>
                    </com.google.android.material.appbar.AppBarLayout>
                </LinearLayout>
                <!--After Search-->
                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:gravity="center_horizontal"
                    android:orientation="vertical">

                    <LinearLayout
                        android:id="@+id/linearLayout2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_alignParentTop="true"
                        android:layout_marginTop="30dp"
                        android:orientation="horizontal">

                        <ImageButton
                            android:id="@+id/main_dish_btn"
                            android:layout_width="85dp"
                            android:layout_height="85dp"
                            android:layout_marginLeft="40dp"
                            android:layout_marginTop="180dp"
                            android:background="@drawable/circle"
                            android:onClick="toMainDish"
                            android:src="@drawable/vegetables" />

                        <ImageButton
                            android:id="@+id/beverage_btn"
                            android:layout_width="80dp"
                            android:layout_height="80dp"
                            android:layout_marginLeft="45dp"
                            android:layout_marginTop="180dp"
                            android:background="@drawable/circle"
                            android:onClick="toBeverage"
                            android:src="@drawable/soda" />

                        <ImageButton
                            android:id="@+id/dessert_btn"
                            android:layout_width="85dp"
                            android:layout_height="85dp"
                            android:layout_marginLeft="40dp"
                            android:layout_marginTop="180dp"
                            android:background="@drawable/circle"
                            android:onClick="toDessert"
                            android:src="@drawable/ice_cream" />
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/linearLayout3"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:layout_marginTop="35dp"
                        android:backgroundTint="#00FFFFFF"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/main"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="35dp"
                            android:layout_marginTop="270dp"
                            android:fontFamily="@font/happylucky_gxnzp"
                            android:text="Main Dish"
                            android:textSize="10pt" />

                        <TextView
                            android:id="@+id/beverage"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="55dp"
                            android:layout_marginTop="270dp"
                            android:fontFamily="@font/happylucky_gxnzp"
                            android:text="Beverage"
                            android:textSize="10pt" />

                        <TextView
                            android:id="@+id/dessert"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="58dp"
                            android:layout_marginTop="270dp"
                            android:fontFamily="@font/happylucky_gxnzp"
                            android:text="Dessert"
                            android:textSize="10pt" />
                    </LinearLayout>
                </RelativeLayout>

                <!--Food Menu-->
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:gravity="center_horizontal"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:id="@+id/linearLayout4"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_alignParentTop="true"
                        android:layout_marginLeft="3dp"
                        android:layout_marginTop="25dp"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/food"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="40dp"
                            android:layout_marginTop="330dp"
                            android:fontFamily="@font/happylucky_gxnzp"
                            android:text="Food Menu"
                            android:textSize="16pt" />

                        <TextView
                            android:id="@+id/seemore"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="110dp"
                            android:layout_marginTop="330dp"
                            android:fontFamily="@font/happylucky_gxnzp"
                            android:onClick="toMainDish"
                            android:text="See More"
                            android:textColor="#fa9611"
                            android:textSize="9pt" />

                    </LinearLayout>

                    <!--Food Menu Details-->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="420dp"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:padding="8dp">

                        <androidx.recyclerview.widget.RecyclerView
                            android:id="@+id/recyclerView"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_gravity="center">

                        </androidx.recyclerview.widget.RecyclerView>

                    </LinearLayout>
                </RelativeLayout>
            </RelativeLayout>
        </ScrollView>

        <include
            layout="@layout/footer"
            android:layout_width="wrap_content"
            android:layout_height="match_parent" />
    </LinearLayout>
</RelativeLayout>

