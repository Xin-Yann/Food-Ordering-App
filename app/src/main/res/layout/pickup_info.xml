<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/pickupInfoheader"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:background="#fa9611"
            android:padding="15dp"
            android:text="Pickup Information"
            android:textAlignment="center"
            android:textColor="#FFFFFF"
            android:textSize="20sp" />

        <Button
            android:id="@+id/home"
            android:layout_width="wrap_content"
            android:layout_height="55dp"
            android:backgroundTint="#fa9611"
            android:text="X"
            android:textColor="#FFFFFF"
            android:textSize="20sp"
            android:onClick="toHome"/>
    </RelativeLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_gravity="top"
        android:layout_weight="1">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/pickupInfo1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="25dp"
                android:layout_marginTop="15dp"
                android:layout_marginRight="25dp"
                android:text="1. Pickup Location \n\nYou can pick up your food orders at Darpa College's cafeteria counter."
                android:textColor="#000000"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/pickupInfo2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="25dp"
                android:layout_marginTop="115dp"
                android:layout_marginRight="25dp"
                android:text="2. Pickup Notifications \n\nOnce you submit your food order, you will receive a notification."
                android:textColor="#000000"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/pickupInfo3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="25dp"
                android:layout_marginTop="215dp"
                android:layout_marginRight="25dp"
                android:text="3. Order Status \n\nYour order's status will change to 'completed' when your food is ready for pickup."
                android:textColor="#000000"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/pickupInfo4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="25dp"
                android:layout_marginTop="315dp"
                android:layout_marginRight="25dp"
                android:text="4. Staff Credits Deductions \n\nFor staff, the cost of food orders will be deducted from your salary at the end of each month."
                android:textColor="#000000"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/pickupInfo5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="25dp"
                android:layout_marginTop="415dp"
                android:layout_marginRight="25dp"
                android:text="5. Contact Information \n\nIf you have any questions or require assistance regarding the pickup process, please contact our customer support at [darpacafe@gmail.com] or [012-3456789]."
                android:textColor="#000000"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/pickupInfo6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="25dp"
                android:layout_marginTop="555dp"
                android:layout_marginRight="25dp"
                android:text="6. Disclaimer \n\nWe strive to ensure your food orders are ready for pickup promptly, but please note that occasional delays may occur."
                android:textColor="#000000"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/pickupInfo7"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="25dp"
                android:layout_marginTop="670dp"
                android:layout_marginRight="25dp"
                android:paddingBottom="50px"
                android:text="7. Feedback \n\nWe appreciate your feedback on our pickup process. Your input helps us improve our service."
                android:textColor="#000000"
                android:textSize="16sp" />
        </RelativeLayout>
    </ScrollView>
</LinearLayout>